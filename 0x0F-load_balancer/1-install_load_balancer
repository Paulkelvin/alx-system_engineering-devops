# Update the system's package lists
apt-get update

# Install software-properties-common
apt-get install -y software-properties-common

# Install HAProxy from official repositories
apt-get install -y haproxy

# Configure HAProxy
HAPROXY_CONFIG="
frontend web-front
        bind *:80
        default_backend web-backend

backend web-backend
        balance roundrobin
        server web1 52.3.253.244:80 check
        server web2 52.3.245.5:80 check
"

echo "$HAPROXY_CONFIG" > /etc/haproxy/haproxy.cfg

# Restart the HAProxy service to apply changes
systemctl restart haproxy

